<div id="tabela_clientes_listagem_principal_container">
    <table id="tabela_clientes_listagem_principal" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Status</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Telefone</th>
                <th class="flex justify-end">Ações</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    function reloadTabelaClientes() {
        const tabela = $("#tabela_clientes_listagem_principal").DataTable();
        tabela.ajax.reload(null, false);
    }
    new DataTable("#tabela_clientes_listagem_principal", {
        language: {
            url: "/lang/pt-Br.json",
        },
        processing: true,
        serverSide: true,
        stateSave: true,
        ajax: {
            type: "GET",
            url: `/api/clientes/getDataTable`,
            headers: {
                "Authorization": "Bearer " + localStorage.getItem("gestao_facil:token"),
            },
            error: function (xhr, status, error) {
                console.log("tabela_clientes:" + error);
            },
        },
        columns: [
            { data: "Uid" },
            { data: "status" },
            { data: "nome" },
            { data: "email" },
            { data: "telefone" },
            {
                data: "acoes",
                className: "flex justify-end",
                searchable: false,
                orderable: false,
            },
        ],
    });
</script>