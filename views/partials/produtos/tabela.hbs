<div id="tabela_produtos_listagem_principal_container">
    <table id="tabela_produtos_listagem_principal" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Código</th>
                <th>Entrada</th>
                <th>Saída</th>
                <th>Preço</th>
                <th>Qtd</th>
                <th class="flex justify-end">Ações</th>
            </tr>
        </thead>
    </table>
</div>

<script>
    function reloadTabelaProdutos() {
        const tabela = $("#tabela_produtos_listagem_principal").DataTable();
        tabela.ajax.reload(null, false);
    }

    new DataTable("#tabela_produtos_listagem_principal", {
        language: {
            url: "/lang/pt-Br.json",
        },
        processing: true,
        serverSide: true,
        stateSave: true,
        ajax: {
            type: "GET",
            url: `/api/produtos`,
            headers: {
                "Authorization": "Bearer " + localStorage.getItem("gestao_facil:token"),
            },
            error: function (xhr, status, error) {
                console.log("tabela_produtos:" + error);
            },
        },
        columns: [
            { data: "Uid" },
            { data: "nome" },
            { data: "codigo" },
            { data: "entradas" },
            { data: "saidas" },
            { data: "preco" },
            { data: "estoque" },
            {
                data: "acoes",
                className: "flex justify-end",
                searchable: false,
                orderable: false,
            },
        ],
    });
</script>