<div class="flex flex-col gap-2 mt-2 overflow-auto max-h-[calc(100vh-12rem)] md:max-h-full" id="produtos-lista-mobile">
</div>
<div id="modal-container-buscar-produtos"></div>
<!-- Bottom Navigation (Mobile) -->
<nav
  class="fixed bottom-0 left-0 w-full bg-card dark:bg-card-dark border-t border-border dark:border-border-dark md:hidden flex justify-around pt-4 h-20 shadow-lg z-20">
  <button type="button" id="navigate-previous-page-mobile"
    class="flex flex-col items-center disabled:text-gray-300 disabled:dark:text-gray-600 text-gray-700 dark:text-gray-300 cursor-pointer hover:text-primary transition">
    <i class="fa-solid fa-arrow-left text-lg"></i>
    <span class="text-xs">Anterior</span>
  </button>
  <button type="button" onclick="abrirModalBuscarProdutos()"
    class="flex flex-col items-center disabled:text-gray-300 disabled:dark:text-gray-600 text-gray-700 dark:text-gray-300 cursor-pointer hover:text-primary transition">
    <i class="fa-solid fa-search text-lg"></i>
    <span class="text-xs">Busca</span>
  </button>
  <button type="button" onclick="salvarProduto()"
    class="flex flex-col items-center disabled:text-gray-300 disabled:dark:text-gray-600 text-gray-700 dark:text-gray-300 cursor-pointer hover:text-primary transition">
    <i class="fa-solid fa-plus text-lg"></i>
    <span class="text-xs">Novo</span>
  </button>
  <button type="button" onclick="abrirModalRelatorioProdutos()"
    class="flex flex-col items-center disabled:text-gray-300 disabled:dark:text-gray-600 text-gray-700 dark:text-gray-300 cursor-pointer hover:text-primary transition">
    <i class="fa-solid fa-file-pdf text-lg"></i>
    <span class="text-xs">Resumo</span>
  </button>
  <button type="button" id="navigate-next-page-mobile"
    class="flex flex-col items-center disabled:text-gray-300 disabled:dark:text-gray-600 text-gray-700 dark:text-gray-300 cursor-pointer hover:text-primary transition">
    <i class="fa-solid fa-arrow-right text-lg"></i>
    <span class="text-xs">Próximo</span>
  </button>
</nav>

<div id="modal-template-buscar-produtos" class="hidden">
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" hx-target="this"
    hx-swap="outerHTML">
    <div
      class="bg-card dark:bg-card-dark border-t border-border dark:border-border-dark p-6 rounded shadow-xl max-w-[95%] transform transition-all duration-300 scale-95 opacity-0 animate-fade-in">
      <h2 class="text-xl font-bold mb-4">Buscar registro</h2>
      <p class="mb-4">Digite o nome do produto que deseja buscar.</p>
      <input type="text" id="search-input-produtos-mobile"
        class="border bg-card dark:bg-card-dark border-border dark:border-border-dark rounded px-4 py-2 w-full mb-4"
        placeholder="Digite o nome do produto" />
      <div class="w-full flex justify-between items-center mb-4">
        <button class="bg-secondary text-sm dark:bg-secondary-dark hover:opacity-90 text-white px-3 py-1.5 rounded-md"
          onclick="fecharModalBuscarProdutos()">
          <i class="fa-regular fa-circle-xmark"></i>
          Fechar
        </button>
        <button class="bg-primary text-sm dark:bg-primary-dark hover:opacity-90 text-white px-3 py-1.5 rounded-md"
          onclick="renderListaProdutos()">
          <i class="fa-solid fa-magnifying-glass"></i>
          Buscar
        </button>
      </div>
    </div>
  </div>
</div>
<script>
  function abrirModalBuscarProdutos() {
    const template = document.getElementById("modal-template-buscar-produtos").innerHTML;
    document.getElementById("modal-container-buscar-produtos").innerHTML = template;
  }
  function fecharModalBuscarProdutos() {
    document.getElementById("modal-container-buscar-produtos").innerHTML = "";
  }

  function renderListaProdutos(page = 1) {
    const container = document.querySelector("#produtos-lista-mobile");
    $.ajax({
      type: "GET",
      url: `/api/produtos/mobile/data`,
      headers: {
        "Authorization": "Bearer " + localStorage.getItem("gestao_facil:token"),
      },
      data: {
        search: $("#search-input-produtos-mobile").val(),
        limit: "10",
        page,
      },
      beforeSend: function (xhr) {
        container.innerHTML = `
            <div class="flex items-center justify-center h-[calc(100vh-12rem)]">
                <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-primary dark:border-primary-dark"></div>
            </div>
        `;
        fecharModalBuscarProdutos();
      },
      success: function (response) {
        renderPagination(response.pagination);
        container.innerHTML = "";
        // Manipular a resposta aqui, se necessário
        if (response.data.length === 0) {
          const noDataHTML = `
              <div class="flex items-center rounded-md bg-card dark:bg-card-dark justify-center h-[calc(100vh-12rem)]">
                <div class="text-center">
                    <i class="fa-solid fa-box-open text-4xl text-gray-500 dark:text-gray-300 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-300">Nenhum produto encontrado.</p>
                </div>
              </div>
          `;
          container.innerHTML = noDataHTML;
          return;
        }
        response.data.forEach((produto) => {
          const produtoHTML = `
              <div class="rounded-2xl cursor-pointer border dark:border-border-dark bg-card dark:bg-card-dark p-4">
                  <div class="flex justify-between">
                    <div class="text-md font-semibold dark:text-white truncate">${produto.nome}</div>
                    <div class="text-sm text-blue-500 dark:text-blue-400"># ${produto.codigo || 'S/N'}</div>
                  </div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">Estoque: ${produto.estoque}</div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">Preço: R$ ${produto.preco}</div>
                  <div class="mt-2 flex justify-between gap-2">
                      <div>
                        <button onclick="visualizarProduto(${produto.id})" class="bg-secondary text-white px-3 py-1 rounded-md text-sm">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                        <button onclick="editarProduto(${produto.id})" class="bg-success text-white px-3 py-1 rounded-md text-sm">
                            <i class="fa-solid fa-pen"></i>
                        </button>
                        <button onclick="abrirModalReporProdutos(${produto.id})" class="bg-info text-white px-3 py-1 rounded-md text-sm">
                            <i class="fa-solid fa-boxes-packing"></i>
                        </button>
                        <button onclick="abrirModalRelatorioProdutoReposicao(${produto.id})" class="bg-primary text-white px-3 py-1 rounded-md text-sm">
                            <i class="fa-solid fa-file-pdf"></i>
                        </button>
                      </div>
                      <button onclick="excluirProduto(${produto.id})" class="bg-danger text-white px-3 py-1 rounded-md text-sm">
                          <i class="fa-solid fa-trash-can"></i>
                      </button>
                  </div>
              </div>
          `;
          container.innerHTML += produtoHTML;
        });
      },
      error: function (xhr, status, error) {
        container.innerHTML = "";
        console.log("mobile_produtos:" + error);
      },
    });
  }
  function renderPagination(pager) {
    const previous = document.querySelector("#navigate-previous-page-mobile");
    const next = document.querySelector("#navigate-next-page-mobile");
    localStorage.setItem("produtos_mobile_TotalPages", pager.totalPages);
    localStorage.setItem("produtos_mobile_page", pager.page);
    previous.disabled = pager.page <= 1;
    next.disabled = pager.page >= pager.totalPages;
  };

  document.querySelector("#navigate-previous-page-mobile").addEventListener("click", () => {
    const currentPage = localStorage.getItem("produtos_mobile_page") || 1;
    const page = Number(currentPage) <= 1 ? 1 : Number(currentPage) - 1;
    renderListaProdutos(page);
  });
  document.querySelector("#navigate-next-page-mobile").addEventListener("click", () => {
    const currentPage = localStorage.getItem("produtos_mobile_page") || 1;
    const totalPages = localStorage.getItem("produtos_mobile_TotalPages") || 1;
    const page = Number(currentPage) >= Number(totalPages) ? Number(totalPages) : Number(currentPage) + 1;
    renderListaProdutos(page);
  });

  renderListaProdutos();
</script>